#include <UTFT.h>
#include <EEPROM.h>
#include <DS3231.h>
#define HYSTEREZE 2

DS3231 rtc(SDA, SCL);

// Declare which fonts we will be using
extern uint8_t SmallFont[];
extern uint8_t SevenSegNumFont[];
extern uint8_t BigFont[];
extern uint8_t SixteenSegment64x96Num;
extern uint8_t SixteenSegment96x144Num[];
// Set the pins to the correct ones for your development shield
// ------------------------------------------------------------
// Arduino Uno / 2009:
// -------------------
// Standard Arduino Uno/2009 shield            : <display model>,A5,A4,A3,A2
// DisplayModule Arduino Uno TFT shield        : <display model>,A5,A4,A3,A2
//
// Arduino Mega:
// -------------------
// Standard Arduino Mega/Due shield            : <display model>,38,39,40,41
// CTE TFT LCD/SD Shield for Arduino Mega      : <display model>,38,39,40,41
//
// Remember to change the model parameter to suit your display module!

/////////////
///ADRESY NASTAVENĂŤ////
///rezim -> 0
//auto/manual -> 1
//MANUALNI NASTAVENI TEPLOTY HODNOTA get term -> 10




UTFT myGLCD(CTE32HR, 38, 39, 40, 41);//deklarace displaye
int term;
int setTerm = 13;
unsigned long previousMillis = 0;
const long interval = 120000;
int ledState = LOW;
////piny tlačáreň
int plus = 10;
int minus = 9;
int entr = 8;
int posuvnik = 7;
///
int pomoc = 0;
int docas = 50;
int poradi = 1; //poradĂ­ v menu
int jeNarade = 1; //poĹ™adĂ­ v nastavenĂ­ casu
int manualniRezim = 0; //urceni zobrazeni manualniho nebo automatickĂ©ho nastavenĂ­
int rezim;
int cinnost = 0; //promena hlĂ­dĂˇ pozici v menu zakladnĂ­ neb rozĹˇĂ­Ĺ™enĂˇ
int auMan = 1; //promÄ›nĂˇ rozliĹˇujicĂ­ manualni a automatickĂ˝ reĹľim naÄŤtenĂˇ z pamÄ›ti
int cas = 0;
int stav;
unsigned long previous = 0;
const long Interval = 1000; //interval refresh displaje
//promÄ›nĂ© pro zmÄ›nu ÄŤasu
int hou = 12;
int minut = 0;
int secun = 0;
int rok;
int moon;
int dayInWeek;



void(*resetFunc)(void) = 0;

void funkceTeploty(int teplota) {
    myGLCD.setFont(SixteenSegment96x144Num);
    myGLCD.setColor(0, 0, 0);
    myGLCD.setBackColor(0, 0, 0);
    myGLCD.print("   ", 15, 100);
    myGLCD.setColor(0, 255, 0);
    myGLCD.setBackColor(0, 0, 0);
    myGLCD.printNumI(teplota, 15, 100);
}
//funke auto manual vykreleni

void manualOrAuto() {
    zmenaObrazu();
    if (!stav) {//pokud je nastaveno na hodnotu jedna -> manuĂˇlnĂ­ nastavenĂ­ teploty
        myGLCD.setFont(BigFont);
        myGLCD.setColor(255, 255, 255);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print("MANUALNI NASTAVENI TEPLOTY", CENTER, 50);

        myGLCD.setFont(SixteenSegment96x144Num);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print("   ", 15, 100);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(EEPROM.read(10), 15, 100);


    }

}

void zmenaObrazu() {

    myGLCD.clrScr();
    myGLCD.setFont(SmallFont);
    myGLCD.setColor(255, 0, 0);
    myGLCD.fillRect(0, 0, 479, 13);
    myGLCD.setColor(64, 64, 64);
    myGLCD.fillRect(0, 306, 479, 319);
    myGLCD.setColor(255, 255, 255);
    myGLCD.setBackColor(255, 0, 0);
    myGLCD.print("TOPENI DO PSI BOUDY", CENTER, 1);
    myGLCD.setBackColor(64, 64, 64);
    myGLCD.setColor(255, 255, 0);
    myGLCD.print("Skrobanek corporation", CENTER, 307);

    myGLCD.setColor(0, 0, 255);
    myGLCD.drawRect(0, 14, 479, 305);


    myGLCD.setColor(0, 0, 0);
    myGLCD.fillRect(1, 15, 478, 304);
    myGLCD.setColor(0, 0, 255);
    myGLCD.setBackColor(0, 0, 0);

}

void menu() {
    myGLCD.setColor(0, 0, 255);
    myGLCD.fillRect(100, 30, 380, 90);
    myGLCD.fillRect(100, 100, 380, 160);
    myGLCD.fillRect(100, 170, 380, 230);
    myGLCD.fillRect(100, 240, 380, 300);//čtverec
    
    myGLCD.setFont(BigFont);//nastaví fond
    myGLCD.setColor(255, 255, 255);
    myGLCD.setBackColor(0, 0, 255);
    myGLCD.print("Letni rezim", 110, 40);
    myGLCD.print("Manual", 110, 110);
    myGLCD.print("Nastaveni casu", 110, 180);
    myGLCD.print("Sporic obrazovky", 110, 250);

    myGLCD.setColor(255, 0, 0);
    myGLCD.fillCircle(400, 50, 15);
}

void trackPoint(int posun) {


    switch (posun) {
        case 1:myGLCD.setColor(0, 0, 0);
            myGLCD.fillCircle(400, docas, 15);
            myGLCD.setColor(255, 0, 0);
            myGLCD.fillCircle(400, 50, 15);
            docas = 50;
            break;

        case 2: myGLCD.setColor(0, 0, 0);
            myGLCD.fillCircle(400, docas, 15);
            myGLCD.setColor(255, 0, 0);
            myGLCD.fillCircle(400, 120, 15);
            docas = 120;
            break;


        case 3:myGLCD.setColor(0, 0, 0);
            myGLCD.fillCircle(400, docas, 15);
            myGLCD.setColor(255, 0, 0);
            myGLCD.fillCircle(400, 190, 15);
            docas = 190;
            break;


        case 4:myGLCD.setColor(0, 0, 0);
            myGLCD.fillCircle(400, docas, 15);
            myGLCD.setColor(255, 0, 0);
            myGLCD.fillCircle(400, 260, 15);
            docas = 260;
            break;


    }
}

///////funkce mÄ›nĂ­ letnĂ­ a zimnĂ­ reĹľim  

void rezimTopeni(int i, String jedna, String dva, int posun) {
    stav = i;
    myGLCD.setFont(BigFont);
    myGLCD.setColor(255, 255, 255);
    myGLCD.setBackColor(0, 0, 255);
    if (i == 1)
        myGLCD.print(jedna, 110, posun);
    else
        myGLCD.print(dva, 110, posun);
}

////funkce ÄŤte hodnotu tlaÄŤĂ­tek a vyuĹľĂ­vĂˇ rezimTopoeni

void posunStranou() {
    if (digitalRead(plus)) {

        switch (poradi) {
            case 1: rezimTopeni(1, "Letni rezim", "Zimni rezim", 40);
                break;

            case 2: rezimTopeni(1, "Automat", "Manual  ", 110);
                break;

        }

        delay(300);
    }

    if (digitalRead(minus)) {
        switch (poradi) {
            case 1: rezimTopeni(0, "Letni rezim", "Zimni rezim", 40);
                break;

            case 2: rezimTopeni(0, "Automat", "Manual  ", 110);
                break;

        }
        delay(300);
    }
}

void save(int hodnota, int adresa) {//uloĹľenĂ­ zmÄ›ny nastavenĂ­
    if (digitalRead(entr)) {
        if (hodnota)
            EEPROM.write(adresa, 0);
        else
            EEPROM.write(adresa, 1);
        resetFunc();


    }
}

void blinkRing() {
    unsigned long current = millis();

    if (current - previous >= Interval) {
        // save the last time you blinked the LED
        previous = current;

        // if the LED is off turn it on and vice-versa:
        if (ledState == LOW) {
            ledState = HIGH;
            myGLCD.setColor(255, 0, 0);
            myGLCD.fillCircle(400, 60, 30);
        } else {
            ledState = LOW;
            myGLCD.setColor(0, 0, 0);
            myGLCD.fillCircle(400, 60, 30);
        }

    }
}

void setTeploty() {
    if (digitalRead(minus)) {
        setTerm--;
        mensi(setTerm);
        myGLCD.setFont(SevenSegNumFont);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print(" ", 350, 150);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 350, 150);
        delay(300);
    }

    if (digitalRead(plus)) {
        setTerm++;
        mensi(setTerm);

        myGLCD.setFont(SevenSegNumFont);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print(" ", 350, 150);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 350, 150);
        delay(300);
    }
}

void mensi(int teplo) {
    if (teplo < 10) {
        myGLCD.setFont(SevenSegNumFont);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print("   ", 350, 150);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 350, 150);
    }
}

void printCas() {// funkce pro vykreslenĂ­ ÄŤasu
    myGLCD.setFont(BigFont);
    myGLCD.setColor(255, 255, 255);
    myGLCD.setBackColor(0, 0, 0);
    myGLCD.print(rtc.getTimeStr(), 350, 280);
}

void nastaveniCasu() {//vykreslĂ­ rozhranĂ­ nastavenĂ­ ÄŤasu
    zmenaObrazu();
    cas = 0;

    myGLCD.setFont(SevenSegNumFont);

    myGLCD.setBackColor(0, 0, 0);
    //myGLCD.print(rtc.getTimeStr(), CENTER, 150);
    myGLCD.setColor(0, 255, 0);
    myGLCD.print(String(hou), 100, 135);
    myGLCD.setColor(255, 255, 255);
    myGLCD.print(String(minut), 200, 135);
    myGLCD.print(String(secun), 300, 135);

}

void posunTime() {
    if (digitalRead(posuvnik)) {
        jeNarade++;
        if (jeNarade > 3)
            jeNarade = 1;
        trackValue(jeNarade);
        delay(300);
    }

}

void trackValue(int posun) {
    switch (posun) {
        case 1:myGLCD.setFont(SevenSegNumFont);
            myGLCD.setBackColor(0, 0, 0);
            myGLCD.setColor(255, 255, 255);
            myGLCD.print(String(secun), docas, 135);
            myGLCD.setColor(0, 255, 0);

            myGLCD.print(String(hou), 100, 135);
            docas = 100;
            break;

        case 2: myGLCD.setFont(SevenSegNumFont);
            myGLCD.setBackColor(0, 0, 0);
            myGLCD.setColor(255, 255, 255);
            myGLCD.print(String(hou), docas, 135);
            myGLCD.setColor(0, 255, 0);

            myGLCD.print(String(minut), 200, 135);
            docas = 200;
            break;

        case 3: myGLCD.setFont(SevenSegNumFont);
            myGLCD.setBackColor(0, 0, 0);
            myGLCD.setColor(255, 255, 255);
            myGLCD.print(String(minut), docas, 135);
            myGLCD.setColor(0, 255, 0);

            myGLCD.print(String(secun), 300, 135);
            docas = 300;
            break;
    }
}

void pridatUbrat(int hodnota) {
    if (digitalRead(plus)) {
        switch (hodnota) {
            case 1:if (hou < 24)
                    hou++;
                else hou = 0;
                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 100, 135);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(hou), 100, 135);

                break;

            case 2: if (minut < 60)
                    minut++;
                else minut = 0;

                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 200, 135);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(minut), 200, 135);

                break;

            case 3: if (secun < 60)
                    secun++;
                else secun = 0;
                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 300, 135);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(secun), 300, 135);

                break;
        }
        delay(300);
        ////////////////////////////////////
    }
    if (digitalRead(minus)) {
        switch (hodnota) {
            case 1:if (hou > 0)
                    hou--;

                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 100, 135);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(hou), 100, 135);
                break;

            case 2: if (minut > 0)
                    minut--;
                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 200, 135);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(minut), 200, 135);
                break;

            case 3: if (secun > 0)
                    secun--;
                myGLCD.setColor(0, 0, 0);
                myGLCD.print("  ", 300, 135);
                myGLCD.setFont(SevenSegNumFont);
                myGLCD.setBackColor(0, 0, 0);
                myGLCD.setColor(0, 255, 0);
                myGLCD.print(String(secun), 300, 135);
                break;
        }
        delay(300);
    }
}

void saveParametr() {
    rtc.setTime(hou, minut, secun);
    resetFunc();
}

void setup() {
    randomSeed(analogRead(0));
    // Setup the LCD
    myGLCD.InitLCD();//inicializace displaye
    rtc.begin();
    int buf[478];
    int x, x2;
    int y, y2;
    int r;
    pinMode(10, INPUT);
    pinMode(9, INPUT);
    // Clear the screen and draw the frame
    zmenaObrazu();
    rezim = EEPROM.read(0);
    auMan = EEPROM.read(1);
    setTerm = EEPROM.read(10);

    if (rezim == 1) {
        myGLCD.setFont(SevenSegNumFont);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print(" ", 350, 150);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 350, 150);
    } else {
        myGLCD.setFont(BigFont);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(255, 255, 255);
        myGLCD.print("netopime ", 300, 150);
    }
    delay(2000);
    term = random(0, 20);
    funkceTeploty(term);
    //myGLCD.setFont(BigFont);
    // myGLCD.print("C  ", 90, 100);
}

///funkce pridava a ubira teplotu
void funkceManual() {
    if (digitalRead(plus)) {
        setTerm++;
        myGLCD.setFont(SixteenSegment96x144Num);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print("   ", 15, 100);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 15, 100);
        delay(300);
    }

    if (digitalRead(minus)) {
        setTerm--;
        myGLCD.setFont(SixteenSegment96x144Num);
        myGLCD.setColor(0, 0, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.print("   ", 15, 100);
        myGLCD.setColor(0, 255, 0);
        myGLCD.setBackColor(0, 0, 0);
        myGLCD.printNumI(setTerm, 15, 100);
        delay(300);
    }
}

void loop() {
    if (digitalRead(entr) && pomoc == 0) {

        myGLCD.clrScr();
        menu();
        pomoc = 1;
        delay(1000);
    }
    
    if (pomoc == 1) {
        // zmenaObrazu();

        if (digitalRead(posuvnik) && cinnost == 0) {
            poradi++;
            if (poradi > 4)
                poradi = 1;
            trackPoint(poradi);
            delay(300);
        }

        switch (poradi) {
            case 1: posunStranou();
                save(stav, 0);
                break;

            case 2: if (manualniRezim == 0)
                    posunStranou();
                if (digitalRead(entr) && manualniRezim == 0) {
                    manualOrAuto();
                    manualniRezim = 1;
                    cinnost = 1;
                }
                if (manualniRezim) {
                    if (!stav)funkceManual();
                    if (digitalRead(entr)) {
                        EEPROM.write(10, setTerm);
                        resetFunc();
                    }
                }
                break;
                //nastavenĂ­ switch poĹ™adĂ­ nastavenĂ­ ÄŤasu
            case 3: if (digitalRead(entr))
                    cas = 1;
                if (cas == 1) {
                    nastaveniCasu();
                    cinnost = 1;
                    docas = 100;
                }
                posunTime();
                pridatUbrat(jeNarade);
                if (digitalRead(entr))
                    saveParametr();
                break;
                //nastavenĂ­ switch poĹ™adĂ­ spoĹ™ic
            case 4:;
                break;

        }

    } else {
        if (rezim == 1) {

            if (setTerm - HYSTEREZE >= term) {
                blinkRing();
            } else {
                if (setTerm <= term) {
                    myGLCD.setColor(0, 255, 0);
                    myGLCD.fillCircle(400, 60, 30);
                }
            }

            unsigned long currentMillis = millis();

            if (currentMillis - previousMillis >= interval) {
                previousMillis = currentMillis;
                term = random(0, 20);
                funkceTeploty(term);
            }

            if (currentMillis - previousMillis >= 1000) {
                previousMillis = currentMillis;
                printCas();
            }

            setTeploty();

        }
    }
}

